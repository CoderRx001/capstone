<div class="row">
  <h1> Your Recipes</h1> 

  <%= form_tag(recipes_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Recipe" %>
      <%= submit_tag "Search", :name => nil %>
  <% end %>

  <% if @recipes.blank? %>
    <h4>There are no recipes containing the term <%= params[:search] %>.</h4>
  <% end %>

  <% recipes = Recipe.all %>
  <% @recipes.each do |recipe| %>
    <div class="col-md-4">
      <div class="thumbnail well">
      <h2><%= link_to recipe.title, recipe_path(recipe) %></a></h2>
      <img src="<%= recipe.image_url %>" alt="<%= recipe.title %>">
  
    <% recipe.ingredients.each do |ingredient| %>
      <p><%= ingredient.name %></p>
    <% end %>
    

      <h3><%= recipe.directions %></h3>
      </div>
    </div>
  <% end %>

  
</div>
